extends layout

block content
  h1 Location List
  table.table.table-striped
    thead
      tr
        th Gym
        th City
        th Wall
        th Actions
    tbody
      each location in location_list
        tr
          td= location.gym
          td= location.city
          td= location.wall ? location.wall.name : 'â€”'
          td
            form(action=`/catalog/location/${location._id}/delete`, method="POST", style="display:inline")
              button.btn.btn-danger.btn-sm(type="submit", onclick="return confirm('Are you sure you want to delete this location?');") Delete
