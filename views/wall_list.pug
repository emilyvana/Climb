extends layout

block content
  h1 Walls List
  table.table.table-striped
    thead
      tr
        th Type
        th Name
        th Description
        th Actions
    tbody
      each wall in wall_list
        tr
          td= wall.type
          td= wall.name
          td= wall.description
          td
            a.btn.btn-primary.btn-sm(href=`/catalog/wall/${wall._id}`) View
         
            form(action=`/catalog/wall/${wall._id}/delete`, method="POST", style="display:inline")
              button.btn.btn-danger.btn-sm(type="submit", onclick="return confirm('Are you sure you want to delete this wall?');") Delete
