extends layout

block content
  h1 Walls List
  table
    thead
      tr
        th Type
        th Name
        th Description
        th Actions         
    tbody
      each wall in wall_list
        tr
          td
            a(href=`/catalog/wall/${wall._id}`)= wall.type
          td= wall.name
          td= wall.description
          td
            form(action=`/catalog/wall/${wall._id}/delete`, method="POST", style="display:inline")
              button(type="submit" onclick="return confirm('Are you sure you want to delete this wall?');") Delete